<section class="social-media mainBody" id="pw-social-media">
@{
    string registeredBaseUrl = "http://jointhedigitalrevolution.azurewebsites.net/";
    string url = (@Request.Url.ToString().StartsWith("http://localhost")) ? registeredBaseUrl : @Request.Url.ToString();
}

    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <div class="fb-like" data-href="@url" data-layout="standard" data-action="like" data-show-faces="false" data-share="false"></div>

    <hr />
</section>