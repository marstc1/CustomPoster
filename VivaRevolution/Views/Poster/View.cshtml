@model VivaRevolution.Models.PosterViewModel

@{
    ViewBag.Title = "View";
}
  
<div class="container_24">
    <div class="grid_24">

        <div id="poster">
            <div id="poster-inner">
                <div id="poster-top">
                    <div class="quote large">@Model.Quote</div>
                    <div class="name small">@Model.Name@Model.Title</div>
                    <div class="posterImg"><img src="~/Content/images/posterId/@String.Format("{0}.gif", @Model.ImgId)" /></div>
                </div>
                <div class="poster-tagline">@Model.TagLine</div>
            </div>
        </div>

    </div>
</div>
