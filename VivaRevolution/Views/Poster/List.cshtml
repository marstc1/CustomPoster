@model VivaRevolution.Models.ViewModels.PosterListViewModel

@{
    ViewBag.Title = "List";
}

@foreach (var poster in Model.Posters)
{
    <div class="container_24">
                    
        <div class="grid_12">
            <div id="poster">
                <div id="poster-top">
                    <div class="quote large">@poster.Quote</div>
                    <div class="name small">@poster.Name@poster.Title</div>
                    <div class="posterImg"><img src="~/Content/images/posterId/@String.Format("{0}.gif", @poster.ImgId)" /></div>
                </div>
                <div class="poster-tagline">
                    @poster.TagLine
                </div>
            </div>
        </div>

        <div class="grid_12">
            <ul id="posterInfo">
                <li><strong>Created by:</strong> @poster.CreatedBy</li>
                <li><strong>Date Created:</strong> @poster.DateCreated</li>
                <li><strong>Star Rating:</strong> 5</li>
            </ul>
        </div>

    </div>
}

